{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "protocolVersion": {
      "type": "integer",
      "minimum": 0,
      "maximum": 0,
      "$comment": "Maximum is the latest Identity protocol version"
    },
    "id": {
      "type": "string",
      "minLength": 42,
      "maxLength": 44,
      "pattern": "^[123456789ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnopqrstuvwxyz]+$"
    },
    "publicKeys": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "uniqueItems": true
    },
    "balance": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "protocolVersion",
    "id",
    "publicKeys",
    "balance"
  ]
}
