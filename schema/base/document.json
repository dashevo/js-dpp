{
  "$schema": "https://schema.dash.org/dpp-0-4-0/meta/dash-schema",
  "$id": "https://schema.dash.org/dpp-0-4-0/base/document",
  "type": "object",
  "properties": {
    "$type": {
      "type": "string"
    },
    "$action": {
      "type": "number",
      "enum": [
        0,
        1,
        2
      ]
    },
    "$rev": {
      "type": "number",
      "multipleOf": 1.0,
      "minimum": 1
    },
    "$scope": {
      "type": "string",
      "minLength": 64,
      "maxLength": 64
    },
    "$scopeId": {
      "type": "string",
      "minLength": 34,
      "maxLength": 34
    },
    "$meta": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "minLength": 64,
          "maxLength": 64
        },
        "stReference":  {
          "type": "object",
          "properties": {
            "blockHash": {
              "type": "string",
              "minLength": 64,
              "maxLength": 64
            },
            "blockHeight": {
              "type": "number",
              "multipleOf": 1,
              "minimum": 1
            },
            "stHeaderHash": {
              "type": "string",
              "minLength": 64,
              "maxLength": 64
            },
            "stPacketHash": {
              "type": "string",
              "minLength": 64,
              "maxLength": 64
            }
          },
          "required": [
            "blockHash",
            "blockHeight",
            "stHeaderHash",
            "stPacketHash"
          ],
          "additionalProperties": false
        }
      },
      "required": ["userId"],
      "additionalProperties": false
    }
  },
  "required": [
    "$type",
    "$action",
    "$rev",
    "$scope",
    "$scopeId"
  ],
  "additionalProperties": false
}
