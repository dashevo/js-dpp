{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.dash.org/dpp-0-4-0/base/document-transition",
  "type": "object",
  "properties": {
    "$id": {
      "type": "string",
      "minLength": 42,
      "maxLength": 44,
      "pattern": "^[123456789ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnopqrstuvwxyz]+$"
    },
    "$type": {
      "type": "string"
    },
    "$rev": {
      "type": "number",
      "multipleOf": 1.0,
      "minimum": 1
    },
    "$action": {
      "type": "number",
      "enum": [1, 2, 4]
    },
    "$entropy": {
      "type": "string",
      "minLength": 34,
      "maxLength": 34
    }
  },
  "required": [
    "$id",
    "$type",
    "$rev",
    "$action"
  ],
  "additionalProperties": false
}
