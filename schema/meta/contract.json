{
  "$schema": "https://schema.dash.org/dpp-0-4-0/meta/dash-schema",
  "$id": "https://schema.dash.org/dpp-0-4-0/meta/contract",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://schema.dash.org/dpp-0-4-0/meta/dash-schema"
    }
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://schema.dash.org/dpp-0-4-0/meta/contract"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 24,
      "pattern": "^((?!-|_)[a-zA-Z0-9-_]*[a-zA-Z0-9])$"
    },
    "version": {
      "type": "number",
      "multipleOf": 1.0,
      "minimum": 1
    },
    "documents": {
      "type": "object",
      "patternProperties": {
        "^((?!-|_)[a-zA-Z0-9-_]{0,62}[a-zA-Z0-9])$": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "object"
            },
            "indices": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "properties": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "patternProperties": {
                        "^((?!-|_)[a-zA-Z0-9-_$]{0,62}[a-zA-Z0-9])$": {
                          "type": "string",
                          "enum": ["asc", "desc"]
                        }
                      },
                      "minProperties": 1,
                      "maxProperties": 1,
                      "additionalProperties": false
                    },
                    "minItems": 1,
                    "maxItems": 100
                  },
                  "unique": {
                    "type": "boolean",
                    "const": true
                  }
                },
                "required": ["properties", "unique"],
                "additionalProperties": false
              },
              "minItems": 1
            },
            "properties": {
              "type": "object",
              "propertyNames": {
                "pattern": "^((?!-|_)[a-zA-Z0-9-_]{0,62}[a-zA-Z0-9])$"
              },
              "minProperties": 1,
              "maxProperties": 100
            },
            "additionalProperties": {
              "type": "boolean",
              "const": false
            }
          },
          "required": [
            "properties",
            "additionalProperties"
          ]
        }
      },
      "minProperties": 1,
      "maxProperties": 100,
      "additionalProperties": false
    },
    "definitions": {
      "type": "object",
      "propertyNames": {
        "pattern": "^((?!-|_)[a-zA-Z0-9-_]{0,62}[a-zA-Z0-9])$"
      },
      "minProperties": 1,
      "maxProperties": 100
    }
  },
  "required": [
    "$schema",
    "name",
    "version",
    "documents"
  ],
  "additionalProperties": false
}
