            }
          },
          "then": {
            "required": ["properties", "additionalProperties"]
          },
          "minProperties": 1,
          "maxProperties": 100,
          "additionalProperties": false
        }
      },
      "propertyNames": {
        "pattern": "^((?!-|_)[a-zA-Z0-9-_]{0,62}[a-zA-Z0-9])$"
      },
      "minProperties": 1,
      "maxProperties": 100
    },
    "definitions": {
