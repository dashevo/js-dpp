        "uniqueItems": {
          "description": "prevent slow validation of large non-scalar arrays",
          "if": {
            "properties": {
              "uniqueItems": {
                "const": true
              },
              "items": {
                "properties": {
                  "type": {
                    "anyOf": [
                      {
                        "enum": [
