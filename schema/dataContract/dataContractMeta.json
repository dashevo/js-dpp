          },
          "then": {
            "required": ["items"]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "array"
              },
              "items": {
                "type": "array"
              }
            },
            "required": ["type","items"]
          },
          "then": {
            "required": ["additionalItems"]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "object"
              }
            },
            "not": {
              "required": ["$ref"]
            }
          },
          "then": {
            "required": ["properties", "additionalProperties"]
          }
        }
      ],
      "additionalProperties": false
    }
  },
  "properties": {
