                  { "$ref": "http://json-schema.org/draft-07/schema#/definitions/stringArray" }
                ]
              }
            },
            "const": true,
            "if": {
              "$ref": "#/definitions/documentSchema"
            },
            "then": {
              "$ref": "#/definitions/documentSchema"
            },
            "else": {
              "$ref": "#/definitions/documentSchema"
            },
            "allOf": {
              "$ref": "#/definitions/documentSchemaArray"
            },
            "anyOf": {
              "$ref": "#/definitions/documentSchemaArray"
            },
            "oneOf": {
              "$ref": "#/definitions/documentSchemaArray"
            },
            "not": {
