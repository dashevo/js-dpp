                          "type": "string",
                          "enum": ["asc", "desc"]
                        }
                      },
                      "minProperties": 1,
                      "maxProperties": 1,
                      "additionalProperties": false
                    },
                    "minItems": 1,
                    "maxItems": 10
                  },
                  "unique": {
                    "type": "boolean"
                  }
                },
                "required": ["properties"],
                "additionalProperties": false
              },
              "minItems": 1,
              "maxItems": 10
            },
            "type": {
              "const": "object"
            },
            "$id": {
              "type": "string",
              "pattern": "^#",
              "minLength": 1
            },
            "$ref": {
              "type": "string",
              "pattern": "^#",
              "minLength": 1
            },
            "$comment": {
              "$ref": "http://json-schema.org/draft-07/schema#/properties/$comment"
            },
            "description": {
              "$ref": "http://json-schema.org/draft-07/schema#/properties/description"
            },
            "examples": {
              "$ref": "http://json-schema.org/draft-07/schema#/properties/examples"
